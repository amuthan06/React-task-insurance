{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
	  "enabled": false,
	  "clientKind": "git",
	  "useIgnoreFile": false
	},
	"files": {
	  "ignoreUnknown": false,
	  "ignore": ["node_modules", "dist", "**/*.css"]
	},
	"formatter": {
	  "enabled": true,
	  "indentStyle": "space",
	  "indentWidth": 2,
	  "lineWidth": 80
	},
	"organizeImports": {
	  "enabled": true
	},
	"linter": {
	  "enabled": true,
	  "rules": {
		"recommended": true,
		"style": {
		  "noNonNullAssertion": "error",
		  "useBlockStatements": "error"
		},
		"correctness": {
		  "noUnusedVariables": "error"
		},
		"suspicious": {
		  "noExplicitAny": "error"
		},
		"a11y": {
		  "useButtonType": "error"
		}
	  }
	},
	"javascript": {
	  "formatter": {
		"quoteStyle": "single",
		"trailingCommas": "es5",
		"semicolons": "asNeeded"
	  }
	},
	"css": {
	  "formatter": { "enabled": false },
	  "linter": { "enabled": false }
	}
  }